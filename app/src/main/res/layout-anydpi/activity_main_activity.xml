<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:drawableTop="@drawable/logo"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="470dp"
                android:layout_below="@id/learn_words"
                android:layout_alignStart="@id/settings"
                android:layout_alignLeft="@id/settings"
                android:contentDescription="@string/description"
                android:scaleType="fitEnd"
                android:src="@drawable/main_activity_london" />

            <Button
                android:id="@+id/learn_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="@drawable/button_background"
                android:drawableStart="@drawable/learn_words"
                android:drawableLeft="@drawable/learn_words"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:text="@string/learn_words"
                android:textSize="17sp" />

            <Button
                android:id="@+id/menu_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/learn_words"
                android:layout_alignStart="@id/learn_words"
                android:layout_alignLeft="@id/learn_words"
                android:layout_alignEnd="@id/learn_words"
                android:layout_alignRight="@id/learn_words"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_background"
                android:drawableStart="@drawable/test"
                android:drawableLeft="@drawable/test"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:text="@string/test"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/menu_test_closed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@id/menu_test"
                android:layout_alignLeft="@id/menu_test"
                android:layout_alignBottom="@id/menu_test"
                android:layout_marginStart="-50dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/closed" />

            <ImageView
                android:id="@+id/menu_my_words_closed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@id/my_words"
                android:layout_alignLeft="@id/my_words"
                android:layout_alignBottom="@id/my_words"
                android:layout_marginStart="-50dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/closed" />

            <Button
                android:id="@+id/my_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_test"
                android:layout_alignStart="@id/learn_words"
                android:layout_alignLeft="@id/learn_words"
                android:layout_alignEnd="@id/learn_words"
                android:layout_alignRight="@id/learn_words"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_background"
                android:drawableStart="@drawable/my_words"
                android:drawableLeft="@drawable/my_words"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:text="@string/my_words"
                android:textSize="17sp" />

            <Button
                android:id="@+id/dictionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_words"
                android:layout_alignStart="@id/learn_words"
                android:layout_alignLeft="@id/learn_words"
                android:layout_alignEnd="@id/learn_words"
                android:layout_alignRight="@id/learn_words"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_background"
                android:drawableStart="@drawable/dictionary"
                android:drawableLeft="@drawable/dictionary"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:text="@string/dictionary"
                android:textSize="17sp" />

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dictionary"
                android:layout_alignStart="@id/learn_words"
                android:layout_alignLeft="@id/learn_words"
                android:layout_alignEnd="@id/learn_words"
                android:layout_alignRight="@id/learn_words"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_background"
                android:drawableStart="@drawable/settings"
                android:drawableLeft="@drawable/settings"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:text="@string/settings"
                android:textSize="17sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
